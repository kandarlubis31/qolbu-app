---
import BaseLayout from '../layouts/BaseLayout.astro';

// KONFIGURASI SURAT (Tinggal ganti ini untuk surat lain)
const SURAH_ID = 18; 
const SURAH_NAME = "Al-Kahfi";
const SURAH_DESC = "110 Ayat â€¢ Makkiyah";
---

<BaseLayout pageTitle={`Surat ${SURAH_NAME}`}>
  
  <div class="sticky top-16 z-40 bg-white/95 dark:bg-slate-900/95 backdrop-blur-md border-b border-slate-200 dark:border-slate-800 -mx-4 px-4 py-3 mb-6 flex items-center justify-between shadow-sm">
    <a href="/quran" class="flex items-center gap-2 text-slate-600 dark:text-slate-400 hover:text-emerald-600 transition-colors p-2 -ml-2 rounded-lg active:bg-slate-100 dark:active:bg-slate-800">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m15 18-6-6 6-6"/></svg>
      <span class="font-medium text-sm">Daftar Surat</span>
    </a>
    
    <button id="settings-btn" class="p-2 bg-slate-100 dark:bg-slate-800 rounded-full text-slate-600 dark:text-slate-300 transition-colors">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="3"/><path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"/></svg>
    </button>
  </div>

  <div class="text-center mb-10 mt-4">
    <h1 class="font-amiri text-5xl mb-2 text-slate-800 dark:text-white leading-relaxed" id="arabic-title">...</h1>
    <h2 class="text-xl font-bold text-slate-700 dark:text-slate-200">Surat {SURAH_NAME}</h2>
    <p class="text-sm text-slate-500 dark:text-slate-400">{SURAH_DESC}</p>
  </div>

  <div id="ayat-container" class="space-y-6 pb-32 min-h-[50vh]">
    <div class="animate-pulse space-y-6">
      {[1,2,3].map(() => (
        <div class="bg-white dark:bg-slate-800 p-5 rounded-2xl border border-slate-100 dark:border-slate-700">
          <div class="flex justify-between mb-4">
            <div class="w-8 h-8 bg-slate-200 dark:bg-slate-700 rounded-lg"></div>
            <div class="w-8 h-8 bg-slate-200 dark:bg-slate-700 rounded-full"></div>
          </div>
          <div class="h-8 bg-slate-200 dark:bg-slate-700 rounded w-3/4 ml-auto mb-4"></div>
          <div class="h-4 bg-slate-200 dark:bg-slate-700 rounded w-full mb-2"></div>
          <div class="h-4 bg-slate-200 dark:bg-slate-700 rounded w-2/3"></div>
        </div>
      ))}
    </div>
  </div>

  <div id="settings-modal" class="fixed inset-0 z-[100] hidden">
    <div class="absolute inset-0 bg-black/60 backdrop-blur-sm transition-opacity" id="overlay"></div>
    <div class="absolute bottom-0 left-0 w-full bg-white dark:bg-slate-900 rounded-t-3xl p-6 shadow-2xl animate-slide-up">
      <div class="flex justify-between items-center mb-6">
        <h3 class="font-bold text-lg text-slate-800 dark:text-white">Tampilan Bacaan</h3>
        <button id="close-settings" class="p-2 bg-slate-100 dark:bg-slate-800 rounded-full text-slate-500">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M18 6 6 18"/><path d="m6 6 12 12"/></svg>
        </button>
      </div>
      
      <div class="space-y-6">
        <div>
          <label class="block text-sm font-medium text-slate-600 dark:text-slate-400 mb-3">Ukuran Font Arab</label>
          <input type="range" id="font-size-range" min="1" max="5" step="1" value="3" class="w-full h-2 bg-slate-200 dark:bg-slate-700 rounded-lg appearance-none cursor-pointer accent-emerald-500">
          <div class="flex justify-between text-xs text-slate-400 mt-2">
            <span>Kecil</span><span>Normal</span><span>Jumbo</span>
          </div>
        </div>
        <hr class="border-slate-100 dark:border-slate-800" />
        <div class="flex items-center justify-between">
          <span class="text-slate-700 dark:text-slate-200 font-medium">Teks Latin</span>
          <label class="relative inline-flex items-center cursor-pointer">
            <input type="checkbox" id="toggle-latin" class="sr-only peer" checked>
            <div class="w-11 h-6 bg-slate-200 peer-focus:outline-none rounded-full peer dark:bg-slate-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-emerald-500"></div>
          </label>
        </div>
        <div class="flex items-center justify-between">
          <span class="text-slate-700 dark:text-slate-200 font-medium">Terjemahan</span>
          <label class="relative inline-flex items-center cursor-pointer">
            <input type="checkbox" id="toggle-arti" class="sr-only peer" checked>
            <div class="w-11 h-6 bg-slate-200 peer-focus:outline-none rounded-full peer dark:bg-slate-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-emerald-500"></div>
          </label>
        </div>
      </div>
    </div>
  </div>

</BaseLayout>

<script is:inline define:vars={{ SURAH_ID }}>
  document.addEventListener('DOMContentLoaded', async () => {
    // DOM Elements
    const container = document.getElementById('ayat-container');
    const titleArab = document.getElementById('arabic-title');
    const settingsBtn = document.getElementById('settings-btn');
    const settingsModal = document.getElementById('settings-modal');
    const closeSettings = document.getElementById('close-settings');
    const overlay = document.getElementById('overlay');
    const fontSizeRange = document.getElementById('font-size-range');
    const toggleLatin = document.getElementById('toggle-latin');
    const toggleArti = document.getElementById('toggle-arti');
    
    let currentAudio = null;

    // 1. Fetch Data
    try {
      const res = await fetch(`https://equran.id/api/v2/surat/${SURAH_ID}`);
      const json = await res.json();
      
      if(json.code === 200) {
        titleArab.innerText = json.data.nama;
        renderAyat(json.data.ayat);
        applySettings(); // Terapkan setting awal
      } else {
        container.innerHTML = `<p class="text-center text-red-500 py-10">Gagal memuat data.</p>`;
      }
    } catch (e) {
      container.innerHTML = `<p class="text-center text-slate-500 py-10">Cek koneksi internet Anda.</p>`;
    }

    // 2. Render Function
    function renderAyat(ayatList) {
      let html = '';
      ayatList.forEach(ayat => {
        // Audio Source (Pilih Misyari '05')
        const audioSrc = ayat.audio['05'];
        
        html += `
          <div class="card-ayat bg-white dark:bg-slate-800 p-5 rounded-2xl border border-slate-100 dark:border-slate-700 shadow-sm transition-all hover:shadow-md">
            <div class="flex justify-between items-center mb-4 border-b border-slate-50 dark:border-slate-700 pb-3">
              <div class="w-8 h-8 bg-slate-100 dark:bg-slate-700 rounded-lg flex items-center justify-center text-sm font-bold text-slate-600 dark:text-slate-300">
                ${ayat.nomorAyat}
              </div>
              <button 
                type="button"
                data-audio="${audioSrc}"
                class="btn-audio p-2 rounded-full text-emerald-500 bg-emerald-50 dark:bg-emerald-900/20 hover:bg-emerald-100 transition-colors active:scale-90"
              >
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon-play pointer-events-none"><polygon points="5 3 19 12 5 21 5 3"/></svg>
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon-pause hidden pointer-events-none"><rect x="6" y="4" width="4" height="16"/><rect x="14" y="4" width="4" height="16"/></svg>
              </button>
            </div>

            <div class="text-right mb-6">
              <p class="text-arab font-amiri text-4xl leading-[2.5] text-slate-800 dark:text-slate-100" dir="rtl">
                ${ayat.teksArab}
              </p>
            </div>

            <div class="space-y-2 border-t border-slate-50 dark:border-slate-700 pt-3">
              <p class="text-latin text-emerald-600 dark:text-emerald-400 font-medium italic text-base leading-relaxed">
                ${ayat.teksLatin}
              </p>
              <p class="text-arti text-slate-600 dark:text-slate-400 text-sm leading-relaxed">
                ${ayat.teksIndonesia}
              </p>
            </div>
          </div>
        `;
      });
      container.innerHTML = html;
      attachAudioListeners();
    }

    // 3. Audio Logic
    function attachAudioListeners() {
      document.querySelectorAll('.btn-audio').forEach(btn => {
        btn.addEventListener('click', function() {
          const url = this.getAttribute('data-audio');
          const iconPlay = this.querySelector('.icon-play');
          const iconPause = this.querySelector('.icon-pause');

          // Pause jika sedang main di tombol yang sama
          if (currentAudio && currentAudio.src === url && !currentAudio.paused) {
            currentAudio.pause();
            iconPlay.classList.remove('hidden');
            iconPause.classList.add('hidden');
            return;
          }

          // Matikan audio sebelumnya
          if (currentAudio) {
            currentAudio.pause();
            document.querySelectorAll('.icon-pause').forEach(el => el.classList.add('hidden'));
            document.querySelectorAll('.icon-play').forEach(el => el.classList.remove('hidden'));
          }

          // Play baru
          currentAudio = new Audio(url);
          currentAudio.play();
          iconPlay.classList.add('hidden');
          iconPause.classList.remove('hidden');

          currentAudio.onended = () => {
            iconPlay.classList.remove('hidden');
            iconPause.classList.add('hidden');
          };
        });
      });
    }

    // 4. Settings Logic (Copy-Paste dari Yasin)
    const showModal = () => settingsModal.classList.remove('hidden');
    const hideModal = () => settingsModal.classList.add('hidden');

    settingsBtn?.addEventListener('click', showModal);
    closeSettings?.addEventListener('click', hideModal);
    overlay?.addEventListener('click', hideModal);

    const applySettings = () => {
      const size = parseInt(fontSizeRange.value);
      const showLatin = toggleLatin.checked;
      const showArti = toggleArti.checked;

      const sizeClasses = ['text-xl', 'text-2xl', 'text-3xl', 'text-4xl', 'text-5xl'];
      
      document.querySelectorAll('.text-arab').forEach(el => {
        el.classList.remove(...sizeClasses);
        el.classList.add(sizeClasses[size - 1]);
      });

      document.querySelectorAll('.text-latin').forEach(el => {
        el.style.display = showLatin ? 'block' : 'none';
      });
      document.querySelectorAll('.text-arti').forEach(el => {
        el.style.display = showArti ? 'block' : 'none';
      });

      localStorage.setItem('surah-settings', JSON.stringify({ size, showLatin, showArti }));
    };

    fontSizeRange.addEventListener('input', applySettings);
    toggleLatin.addEventListener('change', applySettings);
    toggleArti.addEventListener('change', applySettings);

    // Load Settings
    const saved = localStorage.getItem('surah-settings');
    if (saved) {
      const { size, showLatin, showArti } = JSON.parse(saved);
      fontSizeRange.value = size;
      toggleLatin.checked = showLatin;
      toggleArti.checked = showArti;
    }
  });
</script>

<style>
  @keyframes slideUp {
    from { transform: translateY(100%); }
    to { transform: translateY(0); }
  }
  .animate-slide-up { animation: slideUp 0.3s ease-out; }
</style>